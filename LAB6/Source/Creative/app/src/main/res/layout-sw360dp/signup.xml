<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">





    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/signupimage"
        android:scaleType="centerCrop"
        android:layout_alignBottom="@+id/logo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </FrameLayout>

    <ImageButton
        android:id="@+id/image"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/slogo"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:onClick="selectImage"
        android:clickable="true" />


    <LinearLayout

        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        >


        <customfonts.MyTextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="#fff"
            android:textSize="34dp"
            android:gravity="center"


            />







    </LinearLayout>




    <LinearLayout
        android:layout_above="@+id/acc"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/image"
        android:layout_marginTop="12dp"
        >
        <customfonts.MyEditText
            android:id="@+id/username"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Full Name"
            android:layout_marginLeft="46dp"

            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext"
            android:maxLength="12"
            android:background="#0000"
            android:padding="14dp"
            android:gravity="left"
            android:drawableLeft="@drawable/user"
            android:drawablePadding="12dp"
            android:textCursorDrawable="@drawable/colour_cursor"
            />
        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="#dad8d8"/>





        <customfonts.MyEditText
            android:id="@+id/email"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_marginLeft="46dp"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext"
            android:maxLength="12"
            android:background="#0000"
            android:padding="14dp"
            android:gravity="left"
            android:drawableLeft="@drawable/email"
            android:drawablePadding="12dp"
            android:textCursorDrawable="@drawable/colour_cursor"
            />

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="#dad8d8"/>

        <customfonts.MyEditText
            android:id="@+id/password"
            android:textSize="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="46dp"
            android:drawableLeft="@drawable/eye"

            android:drawablePadding="12dp"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext"
            android:background="#0000"
            android:padding="14dp"
            android:gravity="left"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/colour_cursor"
            />

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"

            android:background="#dad8d8"/>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <customfonts.MyTextView
            android:id="@+id/location"
            android:singleLine="true"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:textColorHint="@color/colorhint"
            android:textColor="@color/colortext"
            android:maxLength="50"
            android:background="#0000"
            android:padding="14dp"
            android:gravity="left"
            android:textCursorDrawable="@drawable/colour_cursor"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/button"
            android:inputType="textMultiLine" />

            <ImageButton


                android:id="@+id/button"

                android:layout_gravity="center"

                android:background="@drawable/location"
                android:padding="5dp"
                android:drawablePadding="12dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@+id/view"
                android:layout_alignLeft="@+id/view"
                android:layout_alignStart="@+id/view"
                android:onClick="getLocation"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="56dp"
            android:layout_marginRight="56dp"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="#dad8d8"
            android:id="@+id/view" />


        </RelativeLayout>


        <customfonts.MyTextView

            android:id="@+id/signup1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2b73e1"
            android:text="Sign up"
            android:textSize="16dp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_marginRight="120dp"
            android:padding="9dp"
            android:layout_marginTop="16dp"
            android:maxLines="3"


           />


    </LinearLayout>




    <customfonts.MyTextView
        android:id="@+id/acc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Already have account?"
        android:layout_above="@+id/signinhere"
        android:gravity="center"
        android:lines="1"

        />
    <TextView
        android:id="@+id/signinhere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signin here"
        android:textColor="#2b73e1"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:lines="1"
        android:layout_marginBottom="22dp"

        />

</RelativeLayout>
